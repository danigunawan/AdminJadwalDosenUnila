<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.andaglos.jadwaldosenadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".MainActivity"></activity>

        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UtamaActivity"
            android:label="@string/title_activity_utama"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name=".ruangan.ListRuangan"
            android:label="Ruangan"></activity>

        <activity android:name=".ruangan.TambahRuangan"
            android:label="Tambah Ruangan"></activity>

        <activity android:name=".ruangan.UpdateRuangan"
            android:label="Ubah Ruangan"></activity>
    </application>

</manifest>